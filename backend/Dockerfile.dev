FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./

# Install dependencies
RUN npm install

# Expose ports for all services
EXPOSE 3001 3002 3003 3004 3005 3006

# Default command (will be overridden in docker-compose)
CMD ["npm", "run", "start:dev"]
